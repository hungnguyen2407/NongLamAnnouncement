<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="vn.edu.hcmuaf.nonglamannouncement">

    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_large"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".activity.ForgetPassActivity"
            android:label="@string/title_activity_quen_mat_khau" />
        <activity
            android:name=".activity.AnnounceDetailActivity"
            android:label="@string/title_activity_announce_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.GroupDetailActivity"
            android:label="@string/title_activity_group_detail"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.PostAnnounceActivity"
            android:label="@string/title_activity_post_announce"></activity>
    </application>

</manifest>